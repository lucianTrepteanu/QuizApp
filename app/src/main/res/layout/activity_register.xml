<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/register"
    android:layout_height="match_parent">

    <EditText
        android:padding="3dp"
        android:hint="     Email"
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_register"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="114dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="156dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="104dp" android:layout_marginRight="104dp" android:autofillHints=""
        tools:ignore="LabelFor"/>
    <EditText
        android:padding="3dp"
        android:hint="     Password"
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_register"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="114dp"
        android:layout_marginStart="104dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/email_register" android:autofillHints="" tools:ignore="LabelFor"/>
    <EditText
        android:padding="3dp"
        android:hint="     Confirm Password"
        android:layout_width="233dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirm_password_register"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="114dp"
        android:layout_marginStart="104dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/password_register" android:autofillHints=""
        tools:ignore="LabelFor"/>

    <Button
        android:text="@string/register2"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:id="@+id/button_register"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_register"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="158dp"
        android:layout_marginStart="178dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="167dp"
        android:layout_marginRight="167dp"
        app:layout_constraintHorizontal_bias="0.25"/>
    <Button
        android:layout_width="53dp"
        android:layout_height="46dp"
        android:id="@+id/back_button" android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="280dp"
        android:layout_height="51dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="68dp"
        android:text="@string/join_our_community2"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>