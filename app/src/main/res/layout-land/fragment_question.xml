<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionFragment">

    <Button
        android:id="@+id/varA_fragment"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/arsenal_bold"
        android:layout_marginStart="48dp"
        android:layout_marginTop="96dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionId_fragment"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/varB_fragment"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/arsenal_bold"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="40dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/varA_fragment"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/varC_fragment"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/arsenal_bold"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="48dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toEndOf="@+id/varA_fragment"
        app:layout_constraintTop_toBottomOf="@+id/questionId_fragment"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/varD_fragment"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/arsenal_bold"
        android:layout_width="280dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="48dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toEndOf="@+id/varB_fragment"
        app:layout_constraintTop_toBottomOf="@+id/varC_fragment"
        tools:ignore="MissingConstraints" />

    <TextView
        android:fontFamily="@font/bevan"
        android:textColor="@color/colorWhite"
        android:id="@+id/questionId_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>